<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.RemarksActivity">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/ts_20"
        android:visibility="gone"
        android:background="@drawable/logo_with_title" />

    <TextView
        android:id="@+id/congrats"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Congratulations..."
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/dp_30"
        android:layout_marginTop="@dimen/ts_20"
        android:layout_below="@+id/logo"
        android:gravity="center"
        android:textStyle="bold" />



    <TextView
        android:id="@+id/message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="The test ahs dele,de..."
        android:textSize="@dimen/ts_14"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_below="@+id/congrats"
        android:padding="@dimen/ts_20"
        android:gravity="center"
        android:textStyle="bold" />


    <Button
        android:id="@+id/ok"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_shape"
        android:text="OK"
        android:layout_below="@+id/message"
        android:layout_marginTop="15dp"

        android:layout_margin="30dp"
        android:textColor="@color/white"/>
</RelativeLayout>