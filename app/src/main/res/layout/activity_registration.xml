<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Activities.LoginActivity">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center"
   >

        <ImageView
            android:id="@+id/logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_15"
            app:srcCompat="@drawable/medef_full_logo" />

    <ImageView
        android:id="@+id/std_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logo"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/image_students" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/std_img"
            android:padding="25dp"
            android:orientation="vertical"
            android:background="@drawable/login_bg">

            <LinearLayout
                android:id="@+id/indicator"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:orientation="horizontal"
                >

                <View
                    android:layout_width="@dimen/dp_40"
                    android:layout_height="5dp"
                    android:background="#F26922" />

                <View
                    android:layout_width="@dimen/dp_40"
                    android:layout_height="5dp"
                    android:layout_marginStart="@dimen/dp_4"
                    android:background="#39B54A" />
            </LinearLayout>

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/indicator"
                android:text="Fill Details"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold" />



            <EditText
                android:id="@+id/edit_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:background="@drawable/input_box_bg"
                android:paddingStart="@dimen/dp_10"
                android:hint="Name"
                android:inputType="text"
                android:minHeight="44dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:textColor="@color/Black" />

            <EditText
                android:visibility="gone"
                android:id="@+id/edit_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:background="@drawable/input_box_bg"
                android:drawableStart="@drawable/user"

                android:drawablePadding="8dp"
                android:hint="Username"
                android:inputType="text"
                android:minHeight="44dp"
                android:paddingBottom="5dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="5dp"
                android:textColor="@color/Black" />

            <EditText
                android:id="@+id/edit_emailId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:background="@drawable/input_box_bg"

                android:paddingStart="@dimen/dp_10"

                android:hint="Email ID"
                android:inputType="textEmailAddress"
                android:minHeight="44dp"
                android:paddingBottom="5dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="5dp"
                android:textColor="@color/Black" />





            <Button
                android:id="@+id/submitBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/resendOtp"
                android:layout_marginStart="@dimen/margin_25"
                android:layout_marginTop="25dp"
                android:layout_marginEnd="@dimen/margin_25"
                android:background="@drawable/next_btn"
                android:text="Submit"
                android:textColor="@color/white" />


        </LinearLayout>


    </RelativeLayout>
</ScrollView>