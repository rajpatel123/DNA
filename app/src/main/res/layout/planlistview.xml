<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/closePlanList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin_20dp"
        app:srcCompat="@drawable/cross_icn"/>



    <TextView
        android:id="@+id/selectPlan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Plan"
        android:paddingStart="@dimen/margin_20dp"
        android:layout_below="@+id/closePlanList"
        android:textStyle="bold"
        android:textSize="18sp"/>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/planrecycler"
        android:layout_below="@+id/selectPlan"
        android:layout_margin="@dimen/margin_20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</RelativeLayout>