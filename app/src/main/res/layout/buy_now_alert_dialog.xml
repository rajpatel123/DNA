<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

<LinearLayout
    android:layout_margin="@dimen/margin_15"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_marginLeft="@dimen/margin_10"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:tint="@color/colorAccent"
            android:background="@drawable/coupon_design_alert_dialog" />



        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_10"
            android:text="DNA is Non profitable ,even at the above rates."
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/size_14" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_marginLeft="@dimen/margin_10"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/coupon_design_alert_dialog" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_10"
            android:text="Our Vision is to provide Education at Lowest Possible Cost."
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/size_14" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_marginLeft="@dimen/margin_10"
            android:padding="@dimen/padding_5"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/coupon_design_alert_dialog" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_10"
            android:text=" Join our mission by Taking a paid plan"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/size_14" />
    </LinearLayout>

</LinearLayout>


        <Button
            android:id="@+id/btn_done"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2sp"
            android:background="@color/colorAccent"
            android:paddingBottom="5sp"
            android:paddingLeft="50dp"
            android:paddingRight="50dp"
            android:paddingTop="5sp"
            android:text="PAY NOW"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="OR"
            android:padding="@dimen/padding_5"
            android:textSize="18sp"
            android:textColor="@color/orange"/>

        <Button
            android:id="@+id/btn_done_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorAccent"
            android:paddingBottom="5sp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5sp"
            android:text="Click Here To Buy All Topic "
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10sp"
            android:orientation="horizontal">

            <ImageView
                android:layout_marginLeft="@dimen/margin_20"
                android:padding="@dimen/padding_5"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/coupon_design_alert_dialog" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding_10"
                android:text="Once paid you canâ€™t cancel or get refund as there is no cancellation or refund policy."
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/size_14" />
        </LinearLayout>



        <Button
            android:layout_marginTop="@dimen/margin_10"
            android:id="@+id/btn_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorAccent"
            android:paddingBottom="5sp"
            android:paddingLeft="50dp"
            android:paddingRight="50dp"
            android:paddingTop="5sp"
            android:text="Back"
            android:layout_margin="@dimen/margin_10"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="20sp" />


