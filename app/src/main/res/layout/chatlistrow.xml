<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/llRight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:orientation="vertical"
        android:padding="10dp"
        android:paddingLeft="16dp"
        android:paddingBottom="5dp"
        android:visibility="visible">


        <LinearLayout
            android:id="@+id/llRightName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_bubble_self"
            android:gravity="right"
            android:orientation="vertical"
            android:paddingLeft="16dp"
            android:paddingBottom="5dp"

            android:visibility="visible">

            <TextView
                android:id="@+id/messagerName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="1dp"
                android:text="Raj Patel"
                android:textStyle="bold"
                android:textColor="@color/drop_shadow"
                android:textIsSelectable="true"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="1dp"
                android:background="@drawable/bg_bubble_self"
                android:padding="3dp"
                android:textColor="@android:color/black"
                android:textIsSelectable="true"
                android:textSize="11sp" />
        </LinearLayout>


        <ImageView
            android:id="@+id/ivImageRight"
            android:layout_width="220dp"
            android:layout_height="200dp"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="2dp"
            android:layout_marginRight="7dp"
            android:background="@drawable/bg_bubble_self"
            android:padding="5dp"
            android:scaleType="fitXY"></ImageView>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llLeft"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:orientation="horizontal"
        android:padding="7dp"
        android:visibility="visible">


        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="-3dp"
            android:padding="4dp"
            android:src="@drawable/com_facebook_profile_picture_blank_square"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_bubble_watbot"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvDoctName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorAccent"
                android:textIsSelectable="true"
                android:textSize="14sp"
                android:textStyle="bold"
                android:visibility="visible" />

            <TextView
                android:id="@+id/messageLeft"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:textColor="@android:color/black"
                android:textIsSelectable="true"
                android:textSize="11sp" />

            <ImageView
                android:id="@+id/ivImageLeft"
                android:layout_width="222dp"

                android:layout_height="200dp"
                android:scaleType="fitXY"></ImageView>

        </LinearLayout>


    </LinearLayout>


</LinearLayout>