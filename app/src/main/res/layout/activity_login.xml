<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Activities.LoginActivity">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_15"
        app:srcCompat="@drawable/medef_full_logo" />

    <ImageView
        android:id="@+id/std_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logo"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/image_students" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/std_img"
        android:layout_alignParentBottom="true"
        android:background="@drawable/login_bg">

        <LinearLayout
            android:id="@+id/indicator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="20dp"
            android:orientation="horizontal"
            android:paddingStart="25dp">

            <View
                android:layout_width="@dimen/dp_40"
                android:layout_height="5dp"
                android:background="#F26922" />

            <View
                android:layout_width="@dimen/dp_40"
                android:layout_height="5dp"
                android:layout_marginStart="@dimen/dp_4"
                android:background="#39B54A" />
        </LinearLayout>

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/indicator"
            android:layout_marginStart="@dimen/padding_25dp"
            android:text="Login/Signup"
            android:textColor="@color/white"
            android:textSize="18sp"

            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/phoneLL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title"
            android:gravity="center"
            android:layout_marginStart="@dimen/margin_25"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginEnd="@dimen/margin_25"
            android:background="@drawable/input_box_bg"
            android:orientation="vertical">

            <EditText
                android:id="@+id/phoneNumber"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:background="@null"
                android:hint="Enter phone number" />


        </LinearLayout>

        <Button
            android:id="@+id/nextBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/phoneLL"
            android:layout_marginStart="@dimen/margin_25"
            android:layout_marginTop="35dp"
            android:layout_marginEnd="@dimen/margin_25"
            android:background="@drawable/next_btn"
            android:text="Next"
            android:textColor="@color/white" />


        <TextView
            android:id="@+id/text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/termsLL"
            android:layout_marginTop="15dp"
            android:alpha=".8"
            android:gravity="center"
            android:text="By Signing up, you accept the"
            android:textColor="@color/white"
            android:textSize="@dimen/ts_16" />

        <LinearLayout
            android:id="@+id/termsLL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/terms"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:alpha=".8"
                android:gravity="center"
                android:text="@string/terms"
                android:textColor="@color/white"
                android:textSize="@dimen/ts_16" />

            <TextView
                android:id="@+id/privacy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginBottom="20dp"
                android:alpha=".8"
                android:gravity="center"
                android:text="@string/privacy"
                android:textColor="@color/white"
                android:textSize="@dimen/ts_16" />


        </LinearLayout>
    </RelativeLayout>


</RelativeLayout>