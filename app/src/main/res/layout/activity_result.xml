<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".Activities.ResultActivity">


    <RelativeLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:minHeight="?attr/actionBarSize">

        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:src="@drawable/ic_left_arrow"
            android:tint="@color/white" />

        <TextView
            android:id="@+id/testName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="TestName"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="26dp"
            android:layout_marginRight="26dp"
            android:text="Share"
            android:textColor="@color/white"
            android:visibility="visible" />

    </RelativeLayout>

    <TextView
        android:id="@+id/date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="Taken on "
        android:textColor="@color/white"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/percentage"
        android:layout_width="180dp"
        android:layout_height="30dp"
        android:layout_below="@+id/date"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/percentage"
        android:elevation="10dp"
        android:gravity="center"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="Calculated Percentage"
        android:textColor="@color/colorPrimary"
        android:tint="@color/white" />


    <LinearLayout
        android:id="@+id/comments"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_below="@+id/percentage"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/comments"
        android:orientation="vertical"
        android:padding="10dp"
        android:textColor="@color/black_titles"
        android:textSize="16sp">

        <TextView
            android:id="@+id/percentageValue"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/percentage"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:background="@drawable/rounded_shape"
            android:gravity="center"
            android:padding="5dp"
            android:text="50% "
            android:textColor="@color/white"
            android:textSize="30sp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/total_question"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/comments"
                android:textColor="@color/colorPrimary"
                android:minHeight="30dp"
                android:gravity="center"
                android:textStyle="bold"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/correct"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/comments"
                android:textColor="@color/profile_background"
                android:gravity="center"
                android:textStyle="bold"
                android:layout_marginLeft="5dp"
                android:minHeight="30dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/wrong"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/comments"
                android:layout_marginLeft="5dp"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="@color/red"

                android:minHeight="30dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/skipped"
                android:layout_width="0dp"
                android:background="@drawable/comments"
                android:minHeight="30dp"
                android:layout_marginLeft="5dp"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="@color/star_color"

                android:layout_height="wrap_content"
                android:layout_weight="1" />

        </LinearLayout>


    </LinearLayout>

    <Button
        android:id="@+id/home"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:background="@color/white"
        android:text="GO HOME" />
</RelativeLayout>