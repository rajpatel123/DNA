<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:scrollbars="none"
    tools:context=".Activities.ResultActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:id="@+id/linar"
                android:layout_width="match_parent"
                android:layout_height="450dp"
                android:background="@color/orange"
                android:orientation="vertical">

                <LinearLayout

                    android:layout_width="130dp"
                    android:layout_height="150dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="70dp"
                    android:background="@drawable/result_logo"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="40sp"
                        android:gravity="center"
                        android:text="6300"
                        android:id="@+id/text"
                        android:textColor="@color/white"
                        android:textSize="20sp" />


                </LinearLayout>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:text="Out of 72900"
                    android:textColor="@color/white"
                    android:textSize="18sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20sp"
                    android:layout_marginTop="30sp"
                    android:layout_marginRight="20sp"
                    android:layout_marginBottom="40dp"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/review"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="50dp"
                        android:background="@color/white"
                        android:padding="2dp"
                        android:text="REVIEW"
                        android:textColor="#f37636" />

                    <Button
                        android:id="@+id/btn_share"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="50dp"
                        android:background="@color/white"
                        android:padding="5dp"
                        android:text="SHARE"
                        android:textColor="#f37636" />

                </LinearLayout>

            </LinearLayout>

           <RelativeLayout
               android:layout_marginTop="350dp"
               android:gravity="bottom|end"
               android:layout_marginLeft="30sp"
               android:layout_marginRight="30sp"
               android:orientation="vertical"
               android:layout_width="match_parent"
               android:layout_height="wrap_content">

               <LinearLayout
                   android:id="@+id/top"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_gravity="bottom"
                   android:background="@color/white"
                   android:orientation="vertical"
                   android:visibility="visible">

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_gravity="center"
                       android:paddingTop="10dp"
                       android:text="Performance"
                       android:textColor="#f37636"
                       android:textSize="20sp"
                       android:textStyle="bold" />


                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:layout_gravity="center"
                       android:gravity="center"
                       android:orientation="vertical">

                       <LinearLayout
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:layout_marginLeft="30sp"
                           android:layout_marginTop="10dp"
                           android:orientation="horizontal">

                           <TextView
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:text="Total Score:   "
                               android:textColor="#939598"
                               android:textSize="20sp" />

                           <TextView
                               android:id="@+id/total_question"
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:text="2 out of 100"
                               android:textColor="#939598"
                               android:textSize="20sp"
                               android:textStyle="bold" />
                       </LinearLayout>


                       <LinearLayout
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:layout_marginLeft="30sp"
                           android:layout_marginTop="10dp"
                           android:orientation="horizontal">

                           <TextView
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:text="Percentile   :"
                               android:textColor="#939598"
                               android:textSize="20sp" />

                           <TextView
                               android:id="@+id/percentageValue"
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:textColor="#939598"
                               android:textSize="20sp"
                               android:textStyle="bold" />
                       </LinearLayout>


                       <LinearLayout
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:layout_marginLeft="30sp"
                           android:layout_marginTop="20dp"
                           android:layout_marginRight="30sp"
                           android:orientation="horizontal">

                           <LinearLayout
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:layout_margin="5sp"
                               android:layout_weight="1"
                               android:orientation="vertical">


                               <FrameLayout
                                   android:layout_width="wrap_content"
                                   android:layout_height="wrap_content">
                                   <hiennguyen.me.circleseekbar.CircleSeekBar
                                       android:id="@+id/circular"
                                       android:layout_width="0dp"
                                       android:layout_height="0dp"
                                       android:padding="64dp"
                                       app:csb_arcColor="@color/color_arc"
                                       app:csb_arcWidth="6dp"
                                       app:csb_max="1000"
                                       app:csb_min="10"
                                       app:csb_progress="300"
                                       app:csb_progressColor="@color/colorPrimary"
                                       app:csb_progressWidth="12dp"
                                       app:csb_step="5"
                                       app:csb_textColor="@color/color_text"
                                       app:csb_textSize="36sp"
                                       app:csb_thumbSize="36dp"
                                       />
                                   <TextView
                                       android:id="@+id/correct"
                                       android:layout_width="70sp"
                                       android:layout_height="70sp"
                                       android:background="@drawable/result_number"
                                       android:gravity="center"
                                       android:textColor="@color/orange" />

                               </FrameLayout>

                               <TextView
                                   android:layout_width="wrap_content"
                                   android:layout_height="wrap_content"
                                   android:layout_gravity="center"
                                   android:paddingTop="5dp"
                                   android:gravity="center"
                                   android:text="Correct" />

                           </LinearLayout>

                           <LinearLayout
                               android:layout_width="wrap_content"

                               android:layout_height="wrap_content"
                               android:layout_margin="5sp"
                               android:layout_weight="1"
                               android:orientation="vertical">

                               <TextView
                                   android:id="@+id/wrong"
                                   android:layout_width="70sp"
                                   android:layout_height="70sp"
                                   android:background="@drawable/result_number"
                                   android:gravity="center"

                                   android:textColor="@color/orange" />

                               <TextView
                                   android:layout_width="wrap_content"
                                   android:layout_height="wrap_content"
                                   android:layout_gravity="center"
                                   android:paddingTop="5dp"
                                   android:text="Wrong" />

                           </LinearLayout>

                           <LinearLayout
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:layout_margin="5sp"
                               android:layout_weight="1"
                               android:orientation="vertical">

                               <TextView
                                   android:id="@+id/skipped"
                                   android:layout_width="70sp"
                                   android:layout_height="70sp"
                                   android:background="@drawable/result_number"
                                   android:gravity="center"
                                   android:textColor="@color/orange" />

                               <TextView
                                   android:layout_width="wrap_content"
                                   android:layout_height="wrap_content"
                                   android:layout_gravity="center"
                                   android:paddingTop="5dp"
                                   android:text="Skipped" />

                           </LinearLayout>
                       </LinearLayout>


                   </LinearLayout>




               </LinearLayout>

               <LinearLayout
                   android:layout_below="@id/top"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:orientation="vertical">

                   <android.support.v7.widget.RecyclerView
                       android:id="@+id/recycler"
                       android:layout_width="match_parent"
                       android:layout_height="match_parent">

                   </android.support.v7.widget.RecyclerView>


               </LinearLayout>
           </RelativeLayout>


        </FrameLayout>


    </RelativeLayout>


</ScrollView>