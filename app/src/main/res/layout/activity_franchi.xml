<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="5dp">

    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Personal Details"
            android:textSize="25dp"
            android:textStyle="bold"
            android:layout_gravity="center"

            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Full Name"
            android:textSize="25dp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="15dp"

            />

        <EditText

            android:id="@+id/edit_name_frenchi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:background="@drawable/edittextstyle"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:drawablePadding="8dp"
            android:hint="Aadhar Card/Voter Card/PAN card"
            android:inputType="text"
            android:minHeight="44dp"
            android:paddingLeft="10dp"
            android:paddingRight="5dp"
            android:textColor="@color/Black" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mobile No."
            android:textSize="25dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"

            />


        <EditText
            android:id="@+id/edit_phone_frenchi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:background="@drawable/edittextstyle"
            android:drawablePadding="8dp"
            android:drawableTint="@color/colorPrimary"
            android:hint="Mobile"
            android:inputType="number"
            android:maxLength="10"
            android:minHeight="44dp"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="5dp"
            android:paddingTop="5dp"
            android:textColor="@color/Black"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="WhatsApp Number"
            android:textSize="25dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"

            />

        <EditText

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:background="@drawable/edittextstyle"
            android:drawablePadding="8dp"
            android:drawableTint="@color/colorPrimary"
            android:hint="WhatsApp No."
            android:inputType="number"
            android:maxLength="10"
            android:minHeight="44dp"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="5dp"
            android:paddingTop="5dp"
            android:textColor="@color/Black"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email Id"
            android:textSize="25dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"

            />

        <EditText
            android:id="@+id/edit_emailId_frenchi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:background="@drawable/edittextstyle"

            android:drawablePadding="8dp"

            android:hint="Email ID"
            android:inputType="textEmailAddress"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:minHeight="44dp"
            android:paddingBottom="5dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="5dp"
            android:textColor="@color/Black" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Your present city"
            android:textSize="25dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"

            />

        <EditText


            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:background="@drawable/edittextstyle"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:drawablePadding="8dp"
            android:hint="city"
            android:inputType="text"
            android:minHeight="44dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textColor="@color/Black" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Your present state"
            android:textSize="25dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"

            />

        <EditText

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:background="@drawable/edittextstyle"
            android:drawablePadding="8dp"
            android:hint="State"
            android:inputType="text"
            android:minHeight="44dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textColor="@color/Black"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Communication Address"
            android:textSize="25dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"

            />

        <EditText

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:background="@drawable/edittextstyle"
            android:drawablePadding="8dp"
            android:hint="Address"
            android:inputType="text"
            android:minHeight="44dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textColor="@color/Black"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nearest Landmark"
            android:textSize="25dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"

            />
        <EditText

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:background="@drawable/edittextstyle"
            android:drawablePadding="8dp"
            android:hint="Landmark"
            android:inputType="text"
            android:minHeight="44dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textColor="@color/Black"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pin Code"
            android:textSize="25dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"

            />


        <EditText

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:background="@drawable/edittextstyle"
            android:drawablePadding="8dp"
            android:hint="Pin Code"
            android:inputType="number"
            android:minHeight="44dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textColor="@color/Black"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="BUSINESS ASSOCIATION AREA "
            android:textSize="25dp"
            android:gravity="center"
            android:layout_marginTop="55dp"
            android:textStyle="bold"

            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" Medical College name where you want to become franchise partener"
            android:textSize="20dp"
            android:layout_marginTop="25dp"
            android:paddingLeft="10dp"

            />


        <EditText

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="1dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/edittextstyle"
            android:drawablePadding="8dp"
            android:hint="College Name"
            android:inputType="text"
            android:minHeight="44dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textColor="@color/Black" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="City of medical college"
            android:textSize="25dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"

            />

        <EditText

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="1dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/edittextstyle"
            android:drawablePadding="8dp"
            android:hint="Medical College"
            android:inputType="text"
            android:minHeight="44dp"
            android:paddingLeft="5dp"

            android:paddingRight="5dp"
            android:textColor="@color/Black" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="State of medical college"
            android:textSize="25dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"

            />


        <EditText

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:background="@drawable/edittextstyle"
            android:drawablePadding="8dp"
            android:hint="Medical College"
            android:inputType="text"
            android:minHeight="44dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textColor="@color/Black"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pin code"
            android:textSize="25dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"

            />

        <EditText

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:background="@drawable/edittextstyle"
            android:drawablePadding="8dp"
            android:hint="Pin code"
            android:inputType="number"
            android:minHeight="44dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textColor="@color/Black"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="How much you can invest yearly ()Write any amount above 50 thousand"
            android:textSize="20dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="10dp"

            />

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"


            />

        <EditText
            android:id="@+id/edit_comment_frenchi"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/edittextstyle"
            android:drawablePadding="8dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:hint="Comment"
            android:inputType="text"
            android:minHeight="44dp"
            android:paddingBottom="5dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="5dp"
            android:textColor="@color/Black" />




        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="I agree to receive call/sms from DNA CLASSES."
            android:textSize="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:textColor="@color/black"
            />

        <Button

            android:id="@+id/btn_submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/edittextstyle"
            android:paddingBottom="5dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="5dp"
            android:text="Submit"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="25dp" />



    </LinearLayout>


</ScrollView>

