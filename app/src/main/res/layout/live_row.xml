<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bkg"
    android:layout_marginTop="5dp"
    android:layout_marginLeft="10dp"
    android:visibility="visible"
    android:id="@+id/ll_right"
    android:layout_marginRight="10dp"
    android:orientation="vertical">

  <RelativeLayout
      android:layout_width="fill_parent"
      android:layout_height="wrap_content">

  <LinearLayout
      android:id="@+id/lltopppppp"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="@dimen/dp_5"
      android:layout_marginLeft="5dp"
      android:layout_centerVertical="true"
      android:orientation="vertical">
    <ImageView
        android:id="@+id/thumbnail"
        android:layout_width="75dp"
        android:layout_gravity="center"
        android:layout_height="75dp"
        android:scaleType="centerInside"
        />
      <TextView
          android:id="@+id/tvBatchName"
          android:layout_toRightOf="@+id/tvSubject"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="5dp"
          android:singleLine="true"
          android:layout_marginLeft="@dimen/dp_5"
          android:padding="4dp"
          android:background="@drawable/bkg"
          android:text="Batch A"
          android:textSize="9dp"
          android:textStyle="bold"
          android:layout_gravity="center"
          android:layout_centerVertical="true"
          android:textColor="@color/black"></TextView>

  </LinearLayout>

<LinearLayout
    android:layout_toRightOf="@+id/lltopppppp"
    android:layout_width="fill_parent"
    android:layout_centerVertical="true"
    android:layout_marginTop="5dp"
    android:layout_marginLeft="10dp"

    android:layout_height="wrap_content"
    android:orientation="vertical">
  <LinearLayout
      android:layout_width="fill_parent"
      android:layout_marginLeft="@dimen/dp_5"
      android:layout_marginRight="@dimen/dp_5"
      android:layout_gravity="left"
      android:orientation="horizontal"
      android:weightSum="2"
      android:layout_marginTop="@dimen/dp_5"
      android:layout_height="wrap_content">

     <TextView
         android:id="@+id/tvSubject"
         android:layout_width="0dp"
         android:layout_height="wrap_content"
         android:layout_weight=".65"
         android:text="Subject "
         android:textStyle="bold"

         android:layout_centerVertical="true"
         android:textSize="@dimen/ts_13"
         android:textColor="@color/colorPrimary"></TextView>

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text=":"
          android:layout_centerVertical="true"
          android:textSize="@dimen/ts_13"
          android:textColor="@color/colorPrimary"></TextView>

      <TextView
          android:id="@+id/tvSubjectNa"
          android:layout_toRightOf="@+id/tvSubject"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="1.35"
          android:singleLine="true"
          android:layout_marginLeft="@dimen/dp_5"
          android:text=""
          android:textStyle="bold"
          android:layout_centerVertical="true"
          android:textColor="@color/black"></TextView>
  </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_marginLeft="@dimen/dp_5"
        android:layout_marginRight="@dimen/dp_5"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_marginTop="3dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvTopic"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".65"
            android:text="Topic"
            android:textStyle="bold"

            android:layout_centerVertical="true"
            android:textSize="@dimen/ts_13"
            android:textColor="@color/colorPrimary"></TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=":"
            android:layout_centerVertical="true"
            android:textSize="@dimen/ts_13"
            android:textColor="@color/colorPrimary"></TextView>

        <TextView
            android:id="@+id/tvTopic1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:layout_weight="1.35"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_toRightOf="@+id/tvTopic"
            android:text=""
            android:textColor="@color/black"></TextView>
    </LinearLayout>


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_marginLeft="@dimen/dp_5"
        android:layout_marginRight="@dimen/dp_5"
        android:layout_marginTop="3dp"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvcategory"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".65"
            android:text="Category"
            android:textStyle="bold"

            android:layout_centerVertical="true"
            android:textSize="@dimen/ts_13"
            android:textColor="@color/colorPrimary"></TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=":"
            android:layout_centerVertical="true"
            android:textSize="@dimen/ts_13"
            android:textColor="@color/colorPrimary"></TextView>
        <TextView
            android:id="@+id/tvcategory1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.35"
            android:singleLine="true"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_toRightOf="@+id/tvcategory"
            android:text=""
            android:textColor="@color/black"></TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_marginLeft="@dimen/dp_5"
        android:layout_marginRight="@dimen/dp_5"
        android:weightSum="2"
        android:layout_marginTop="3dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tveducator"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".65"
            android:text="Educator"
            android:textStyle="bold"

            android:layout_centerVertical="true"
            android:textSize="@dimen/ts_13"
            android:textColor="@color/colorPrimary"></TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=":"
            android:layout_centerVertical="true"
            android:textSize="@dimen/ts_13"
            android:textColor="@color/colorPrimary"></TextView>

        <TextView
            android:id="@+id/tveducator1"
            android:layout_toRightOf="@+id/tveducator"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.35"
            android:layout_marginLeft="@dimen/dp_5"
            android:singleLine="true"
            android:text=""
            android:layout_centerVertical="true"
            android:textColor="@color/black"></TextView>
    </LinearLayout>


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_marginLeft="@dimen/dp_5"
        android:layout_marginRight="@dimen/dp_5"
        android:orientation="horizontal"
        android:visibility="gone"
        android:weightSum="2"
        android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/rlDate"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:weightSum="2"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginTop="3dp"
      >



        <TextView
            android:id="@+id/tvDate"
            android:layout_width="0dp"
            android:layout_weight=".65"
            android:layout_height="wrap_content"
            android:text="Date"
            android:layout_centerVertical="true"
            android:textSize="@dimen/ts_13"
            android:textColor="@color/colorPrimary"></TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=":"
            android:layout_centerVertical="true"
            android:textSize="@dimen/ts_13"
            android:textColor="@color/colorPrimary"></TextView>


        <TextView
            android:id="@+id/tvDate1"
            android:layout_toRightOf="@+id/tvDate"
            android:layout_width="0dp"
            android:layout_weight="1.35"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:layout_marginLeft="@dimen/dp_5"
            android:text=""
            android:layout_centerVertical="true"
            android:textColor="@color/black"></TextView>
    </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_toRightOf="@+id/rlDate"
        android:layout_width="fill_parent"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="5dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"

        android:layout_marginTop="3dp">



        <TextView
            android:id="@+id/tvTime"
            android:layout_width="0dp"
            android:layout_weight=".65"
            android:layout_height="wrap_content"
            android:text="Date &amp; Time"
            android:layout_centerVertical="true"
            android:textStyle="bold"

            android:textSize="@dimen/ts_13"
            android:textColor="@color/colorPrimary"></TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=":"
            android:layout_centerVertical="true"
            android:textSize="@dimen/ts_13"
            android:textColor="@color/colorPrimary"></TextView>

        <TextView
            android:id="@+id/tvTime1"
            android:layout_toRightOf="@+id/tvTime"
            android:layout_width="0dp"
            android:layout_weight="1.35"
            android:singleLine="true"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_5"
            android:text=""
            android:textSize="@dimen/ts_11"
            android:layout_centerVertical="true"
            android:textColor="@color/black"></TextView>
    </LinearLayout>

</LinearLayout>
  </RelativeLayout>


    <TextView
        android:id="@+id/buy_now"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:minHeight="40dp"
        android:layout_marginTop="7dp"
        android:background="@drawable/video_buy_now_txt"
        android:gravity="center"
        android:paddingLeft="@dimen/margin_10"
        android:paddingRight="@dimen/margin_10"
        android:textStyle="bold"

        android:text="Buy Now"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="12sp" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:visibility="gone"
        android:background="@drawable/border_line">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="vertical"
            android:padding="1pt">

            <ImageView
                android:id="@+id/drImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_margin="@dimen/dp_5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/thumb" />

            <TextView
                android:id="@+id/subjectName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:ellipsize="end"
                android:gravity="center"
                android:padding="@dimen/dp_2"
                android:singleLine="true"
                android:text="Pathology"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:visibility="gone" />


            <TextView
                android:id="@+id/drName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:ellipsize="end"
                android:gravity="center"
                android:padding="@dimen/dp_2"
                android:text="By \n Dr. Niraj Singh"

                android:textColor="@color/green"
                android:visibility="gone" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"

                android:visibility="gone">

                <TextView
                    android:id="@+id/timer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:padding="@dimen/dp_2"
                    android:singleLine="true"
                    android:text="25th April 10 AM"
                    android:textColor="@color/profile_background"
                    android:textStyle="bold" />

            </RelativeLayout>

        </LinearLayout>



    </RelativeLayout>


</LinearLayout>