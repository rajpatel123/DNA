<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:orientation="vertical"
    tools:context=".Activities.ReviewQuestionList">

    <androidx.cardview.widget.CardView
        android:id="@+id/filterView"
        android:layout_width="@dimen/margin_200"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:background="@color/black_disabled"
        android:elevation="@dimen/margin_10dp"
        android:padding="@dimen/margin_10dp"
        android:translationZ="@dimen/margin_5"
        android:visibility="gone"
        app:cardUseCompatPadding="true"
        tools:visibility="visible">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/button_color_noticeboard"
                    android:gravity="center"

                    android:minHeight="30dp"
                    android:text="Answers"
                    android:textColor="@color/white" />

                <RadioGroup
                    android:id="@+id/answersGroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_10dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_10dp"
                    android:background="@color/button_color_noticeboard"

                    android:gravity="center"
                    android:minHeight="30dp"
                    android:text="Subjects"
                    android:textColor="@color/white" />

                <RadioGroup
                    android:id="@+id/subjectsGroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_10dp" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_10dp"
                    android:background="@color/button_color_noticeboard"
                    android:gravity="center"
                    android:minHeight="30dp"
                    android:text="Levels"
                    android:textColor="@color/white" />

                <RadioGroup
                    android:id="@+id/levelGroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_10dp" />

                <Button
                    android:id="@+id/applyFilter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/margin_10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/rounded_shape"
                    android:maxHeight="20dp"
                    android:text="Apply"
                    android:textColor="@color/white" />
            </LinearLayout>

        </ScrollView>
    </androidx.cardview.widget.CardView>

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_alignParentTop="true"
            android:background="?attr/colorPrimary"
            app:contentInsetStartWithNavigation="0dp"
            app:navigationIcon="@drawable/ic_arrow_back_black_24dp"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:title="Review"
            app:titleTextColor="@color/white" >
            <ImageView
                android:id="@+id/logo"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/margin_10"
                android:layout_toEndOf="@+id/back_button"
                android:background="@drawable/dnalogo"
                android:elevation="@dimen/dp_2" />
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/review_bg"
        android:layout_below="@+id/appBarLayout">

    </androidx.recyclerview.widget.RecyclerView>

    <TextView
        android:id="@+id/noContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:textStyle="bold"
        android:visibility="gone"
        android:text="No question for current filter"/>

</RelativeLayout>