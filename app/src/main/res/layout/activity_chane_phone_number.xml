<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".Activities.ChanePhoneNumberActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:padding="@dimen/padding_5"
            android:paddingStart="@dimen/margin_23"
            android:paddingLeft="@dimen/margin_23"
            android:text="Enter Your Phone Number "
            android:textColor="@color/black_titles"
            android:textSize="@dimen/ts_14"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/enter_phoneNo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="@dimen/margin_top_15"
            android:layout_marginRight="20dp"
            android:background="@drawable/edittextstyle"
            android:gravity="left|center_vertical"
            android:hint="Enter Your Phone Number"
            android:inputType="number"
            android:maxLength="10"
            android:minHeight="48dp"
            android:paddingStart="10dp"
            android:paddingRight="@dimen/padding_right_10"
            android:textColor="@color/Black" />

        <Button
            android:id="@+id/ContactNo_sendOtp_Btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="@dimen/margin_top_20"
            android:layout_marginRight="30dp"
            android:background="@drawable/buttonlogin"
            android:padding="@dimen/padding_5"
            android:text="Send OTP"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/size_20"
            android:textStyle="bold" />


    </LinearLayout>

</LinearLayout>