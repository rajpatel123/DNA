<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10sp"
        android:background="@drawable/payment_txt_design">

        <android.support.v7.widget.CardView
            android:id="@+id/card_view_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/payment_txt_design"
                android:orientation="vertical"
                android:padding="@dimen/padding_5">

                <LinearLayout
                    android:layout_width="match_parent"

                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/padding_5">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/margin_3"
                            android:text="Name:"
                            android:textColor="@color/black"
                            android:textSize="@dimen/ts_16" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/margin_3"
                            android:text="Email Id:"
                            android:textColor="@color/black"
                            android:textSize="@dimen/ts_16" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/margin_3"
                            android:text="Mobile No.:"
                            android:textColor="@color/black"
                            android:textSize="@dimen/ts_16" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/margin_3"
                            android:text="Address:"
                            android:textColor="@color/black"
                            android:textSize="@dimen/ts_16" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/margin_3"
                            android:text="Landmark:"
                            android:textColor="@color/black"
                            android:textSize="@dimen/ts_16" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/margin_3"
                            android:text="State:"
                            android:textColor="@color/black"
                            android:textSize="@dimen/ts_16" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/margin_3"
                            android:text="City:"
                            android:textColor="@color/black"
                            android:textSize="@dimen/ts_16" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/margin_3"
                            android:text="PinCode:"
                            android:textColor="@color/black"
                            android:textSize="@dimen/ts_16" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">


                        <TextView
                            android:id="@+id/txt_address_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/margin_3"
                            android:text=""
                            android:textColor="@color/black"
                            android:textSize="@dimen/ts_16" />

                        <TextView
                            android:id="@+id/txt_address_email"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/margin_3"
                            android:text=""
                            android:textColor="@color/black"
                            android:textSize="@dimen/ts_16" />

                        <TextView
                            android:id="@+id/txt_address_mobile"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/margin_3"
                            android:text=""
                            android:textColor="@color/black"
                            android:textSize="@dimen/ts_16" />

                        <TextView
                            android:id="@+id/txt_address_shipping"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/margin_3"
                            android:text=""
                            android:textColor="@color/black"
                            android:textSize="@dimen/ts_16" />

                        <TextView
                            android:id="@+id/txt_address_permanent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/margin_3"
                            android:text=""
                            android:textColor="@color/black"
                            android:textSize="@dimen/ts_16" />

                        <TextView
                            android:id="@+id/txt_address_state"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/margin_3"
                            android:text=""
                            android:textColor="@color/black"
                            android:textSize="@dimen/ts_16" />

                        <TextView
                            android:id="@+id/txt_address_city"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/margin_3"
                            android:text=""
                            android:textColor="@color/black"
                            android:textSize="@dimen/ts_16" />

                        <TextView
                            android:id="@+id/txt_address_pincode"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/margin_3"
                            android:text=""
                            android:textColor="@color/black"
                            android:textSize="@dimen/ts_16" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <Button
                        android:id="@+id/edit_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_marginRight="@dimen/margin_10"
                        android:layout_marginBottom="@dimen/margin_10"
                        android:background="@drawable/buttonlogin"
                        android:padding="@dimen/padding_5"
                        android:layout_marginLeft="@dimen/margin_10"
                        android:text="Edit"
                        android:textColor="@color/white" />


                    <Button
                        android:id="@+id/deleteAddress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_marginRight="@dimen/margin_10"
                        android:layout_marginBottom="@dimen/margin_10"
                        android:background="@drawable/buttonlogin"
                        android:padding="@dimen/padding_5"
                        android:text="Delete"
                        android:textColor="@color/white" />

                    <Button
                        android:id="@+id/proceed_pay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_marginRight="@dimen/margin_10"
                        android:layout_marginBottom="@dimen/margin_10"
                        android:background="@drawable/buttonlogin"
                        android:padding="@dimen/padding_5"
                        android:text="Proceed To Pay"
                        android:textColor="@color/white" />

                </LinearLayout>

            </LinearLayout>


        </android.support.v7.widget.CardView>


    </LinearLayout>


</RelativeLayout>