<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:scrollbars="none"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/linear1"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_margin="@dimen/margin_10"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:textSize="18sp"
            android:layout_gravity="center"
            android:textColor="@color/black_titles"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Introducing"/>
        <TextView
            android:textSize="@dimen/ts_20"
            android:layout_gravity="center"
            android:textColor="@color/colorAccent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Guess Tracking"/>

        <TextView
            android:background="@drawable/guesstracker"
            android:textSize="18sp"
            android:gravity="center"
            android:layout_margin="10dp"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:layout_width="80dp"
            android:layout_height="90dp"
            android:text="+54"/>

        <TextView
            android:layout_margin="10dp"
            android:textSize="@dimen/ts_16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/black_titles"
            android:text="@string/guess_heading"/>

        <TextView
            android:layout_margin="8dp"
            android:textSize="@dimen/ts_16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/guess_sub_heading"/>


        <Button
            android:id="@+id/button_guess"
             android:background="@color/colorAccent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="OK GOT IT"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginBottom="40dp"/>

    </LinearLayout>




</ScrollView>