<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Activities.LoginActivity">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Activities.LoginActivity">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_15"
        app:srcCompat="@drawable/medef_full_logo" />

    <ImageView
        android:id="@+id/std_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logo"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_marginEnd="@dimen/dp_20"
        android:layout_marginBottom="@dimen/dp_20"
        app:srcCompat="@drawable/image_students" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/std_img"
        android:background="@drawable/login_bg">

        <LinearLayout
            android:id="@+id/indicator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="15dp"
            android:orientation="horizontal"
            android:paddingStart="25dp">

            <View
                android:layout_width="@dimen/dp_40"
                android:layout_height="5dp"
                android:background="#F26922" />

            <View
                android:layout_width="@dimen/dp_40"
                android:layout_height="5dp"
                android:layout_marginStart="@dimen/dp_4"
                android:background="#39B54A" />
        </LinearLayout>

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/indicator"
            android:layout_marginStart="@dimen/padding_25dp"
            android:text="Verification"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title"
            android:layout_marginStart="@dimen/margin_25"
            android:layout_marginEnd="@dimen/margin_25">

            <TextView
                android:id="@+id/message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Enter the OTP Sent to "
                android:textColor="@color/white"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/message"
                android:textColor="@color/white"
                android:textSize="14sp"
                tools:text="48394894434 " />

            <TextView
                android:id="@+id/editTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="@dimen/dp_5"
                android:text="@string/edit"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold" />
        </RelativeLayout>

        <com.alimuzaffar.lib.pin.PinEntryEditText
            android:id="@+id/pin_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="@dimen/margin_25"
            android:layout_marginTop="@dimen/dp_50"
            android:layout_marginEnd="@dimen/margin_25"
            android:background="@android:color/transparent"
            android:cursorVisible="false"
            android:digits="1234567890"
            android:focusable="true"
            android:gravity="center_horizontal"
            android:imeOptions="actionDone"
            android:inputType="number"
            android:textColor="@color/white"
            android:maxLength="6"
            android:textIsSelectable="false"
            android:textSize="@dimen/ts_20"
            app:pinAnimationType="popIn"
            app:pinBackgroundIsSquare="true"
            app:pinCharacterSpacing="12dp"
            app:pinLineColors="@color/black_disabled"
            app:pinLineStroke="2dp"
            app:pinLineStrokeSelected="2dp"
            app:pinTextBottomPadding="4dp" />

        <TextView
            android:id="@+id/resendOtp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pin_layout"
            android:layout_marginStart="@dimen/margin_25"
            android:layout_marginTop="@dimen/margin_25"
            android:gravity="start"
            android:text="@string/resend_otp"
            android:textColor="@color/white"
            android:visibility="visible" />

        <LinearLayout
            android:id="@+id/phoneLL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title"
            android:layout_marginStart="@dimen/margin_25"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginEnd="@dimen/margin_25"
            android:background="@drawable/input_box_bg"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone">

            <EditText
                android:id="@+id/phoneNumber"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:background="@null"
                android:hint="Enter phone number" />


        </LinearLayout>

        <Button
            android:id="@+id/nextBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/resendOtp"
            android:layout_marginStart="@dimen/margin_25"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="@dimen/margin_25"
            android:background="@drawable/next_btn"
            android:text="Verify Otp"
            android:textColor="@color/white" />


    </RelativeLayout>


</RelativeLayout>

</ScrollView>








