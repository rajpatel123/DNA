<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/row_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".5">

            <View
                android:id="@+id/lineView"
                android:layout_width="2dp"
                android:layout_height="108dp"
                android:layout_gravity="center_horizontal"
                android:background="@color/dark_gray"
                android:elevation="2dp"
                android:visibility="gone" />

            <View
                android:id="@+id/lineViewWithMargin"
                android:layout_width="2dp"
                android:layout_height="108dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="34dp"
                android:background="@color/dark_gray"
                android:elevation="2dp" />

            <TextView
                android:id="@+id/number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="55dp"
                android:background="@drawable/bage_shape_vid"
                android:elevation="3dp"
                android:gravity="center"
                android:text="1"
                android:textColor="@color/white"
                android:textSize="12sp" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/linear_top"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="5dp"
                android:background="@color/color_video"
                android:orientation="vertical"
                android:paddingRight="40dp"
                android:visibility="visible">

                <TextView
                    android:id="@+id/chapter"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    android:paddingLeft="15dp"
                    android:textColor="@color/white"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/linear_top"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/payment_txt_design"
                android:orientation="horizontal">


                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp">

                    <TextView
                        android:id="@+id/commingsoon"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:elevation="5dp"
                        android:gravity="center"
                        android:maxLines="2"
                        android:text="Coming \nSoon"
                        android:textColor="@color/white"
                        android:textSize="10sp"
                        android:textStyle="bold"
                        android:visibility="gone" />


                    <ImageView
                        android:id="@+id/image_doctor"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center"
                        android:layout_margin="2dp" />

                </FrameLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/vid_title"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_toStartOf="@+id/txt_actual_price"

                                android:padding="@dimen/margin_3"
                                android:text="Introduction to  Anotomy Video in Anotomy Anotomy"
                                android:textColor="#313133"
                                android:textSize="14sp" />


                            <TextView
                                android:id="@+id/txt_actual_price"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:paddingLeft="@dimen/margin_7"
                                android:paddingTop="2sp"
                                android:paddingRight="@dimen/padding_5"
                                android:paddingBottom="2sp"
                                android:textAllCaps="false"
                                android:textColor="@color/orange"
                                android:textSize="14dp" />


                        </RelativeLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <SeekBar
                            android:id="@+id/progress"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/transparent"
                            android:max="100"
                            android:visibility="gone"
                            android:progress="100"
                            android:focusable="false"

                            android:thumb="@color/transparent" />

                        <TextView
                            android:id="@+id/vid_doctor_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:maxLines="1"
                            android:padding="@dimen/margin_3"
                            android:text="Introduction to Anotomy"
                            android:textAllCaps="false"
                            android:textColor="#313133"
                            android:textSize="10sp" />

                        <TextView
                            android:id="@+id/txt_total_price"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:layout_weight="1.7"
                            android:gravity="end"
                            android:paddingLeft="@dimen/margin_7"
                            android:paddingTop="2sp"
                            android:paddingRight="@dimen/padding_5"
                            android:paddingBottom="2sp"
                            android:textAllCaps="false"
                            android:textColor="@color/Blue"
                            android:textSize="14dp" />


                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/ts_20"
                            android:layout_height="@dimen/ts_20"
                            android:layout_gravity="center"
                            app:srcCompat="@drawable/ic_star" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="7dp"
                            android:layout_weight=".3"
                            android:text="(5.0)"
                            android:textColor="@color/vedio_text_color"
                            android:textSize="@dimen/evp_text_size_small" />

                        <View
                            android:layout_width="3dp"
                            android:layout_height="15dp"
                            android:layout_gravity="center"
                            android:background="@color/colorAccent" />

                        <TextView
                            android:id="@+id/ratingandtime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="7dp"
                            android:layout_weight="1"
                            android:text="20mits"
                            android:textColor="@color/vedio_text_color"
                            android:textSize="@dimen/evp_text_size_small"
                            android:textStyle="bold" />


                        <TextView
                            android:id="@+id/buy_now"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/margin_10"
                            android:background="@drawable/video_buy_now_txt"
                            android:gravity="end"
                            android:paddingLeft="@dimen/margin_10"
                            android:paddingTop="5dp"
                            android:paddingRight="@dimen/margin_10"
                            android:paddingBottom="5dp"
                            android:text="Buy Now"
                            android:textAllCaps="false"
                            android:textColor="@color/white"
                            android:textSize="12dp"
                            android:visibility="gone" />

                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

</LinearLayout>